<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cài Đặt"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:padding="16dp"
        android:background="#F5F5F5" />

    <!-- Settings content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Notification Settings Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông Báo"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FF5722"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

            <!-- Enable/Disable notifications -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="#F9F9F9"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Bật thông báo"
                    android:textSize="14sp"
                    android:textColor="#333333" />

                <Switch
                    android:id="@+id/switchNotifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />

            </LinearLayout>

            <!-- Notification time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="#F9F9F9"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Giờ thông báo"
                    android:textSize="14sp"
                    android:textColor="#333333" />

                <EditText
                    android:id="@+id/notificationHour"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:text="0"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:background="@drawable/edit_text_bg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="h"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/notificationMinute"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:text="0"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:background="@drawable/edit_text_bg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="m"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <!-- Timezone Setting -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="#F9F9F9"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Múi giờ"
                    android:textSize="14sp"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/timezoneDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(Tự động)"
                    android:textSize="13sp"
                    android:textColor="#FF6B35"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Display Settings Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hiển Thị"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FF5722"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <!-- Show lunar calendar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="#F9F9F9"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Hiển thị Âm lịch"
                    android:textSize="14sp"
                    android:textColor="#333333" />

                <Switch
                    android:id="@+id/switchLunarCalendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />

            </LinearLayout>

            <!-- About Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông Tin"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FF5722"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="#F9F9F9"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Holiday Notification Calendar"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#333333" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phiên bản: 1.0"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ứng dụng quản lý ngày lễ Việt Nam với thông báo thông minh"
                    android:textSize="12sp"
                    android:textColor="#888888"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
