<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tạo Ngày Lễ Cá Nhân"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#2C3E50"
        android:layout_marginBottom="16dp" />

    <!-- Holiday Name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên ngày lễ *"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            android:layout_marginBottom="6dp" />

        <EditText
            android:id="@+id/editHolidayName"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:hint="VD: Sinh nhật, Kỷ niệm..."
            android:background="@drawable/edit_text_bg"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Holiday Date -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày tháng *"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            android:layout_marginBottom="6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/editDay"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:hint="Ngày"
                android:inputType="number"
                android:background="@drawable/edit_text_bg"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textSize="14dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textSize="16sp"
                android:textColor="#2C3E50"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/editMonth"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:hint="Tháng"
                android:inputType="number"
                android:background="@drawable/edit_text_bg"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Holiday Description -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mô tả (tùy chọn)"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            android:layout_marginBottom="6dp" />

        <EditText
            android:id="@+id/editDescription"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Ghi chú về ngày lễ này..."
            android:background="@drawable/edit_text_bg"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="12dp"
            android:textSize="14sp"
            android:gravity="top"
            android:inputType="textMultiLine" />

    </LinearLayout>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="100dp"
            android:layout_height="44dp"
            android:text="Hủy"
            android:textColor="#7F8C8D"
            android:background="@drawable/btn_secondary"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="100dp"
            android:layout_height="44dp"
            android:text="Lưu"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@drawable/btn_primary" />

    </LinearLayout>

</LinearLayout>
